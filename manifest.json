{
  "name": "SHS All in One",

  "version": "1.3.6",
  "options_page": "options.html",
  "manifest_version": 2,
  "description": "Check your upcoming Schoology assignments as well as today's daily schedule. Created by Jack Sharkey.",
  "icons": {"16": "16.png", "48": "48.png", "128": "128.png"},
  "browser_action": {
    "default_icon": "128.png",
    "default_title": "SHS",
    "default_popup": "browser_action.html"
  },
  "content_scripts": [
    {
      "matches": ["https://app.schoology.com/*"],
      "js": ["jquery-2.2.1.min.js", "keys.js"]
    }
  ],
    "permissions": [
      "https://api.schoology.com/v1/*",
      "https://www.schoology.com/oauth/authorize",
      "notifications",
      "http://shstv.herokuapp.com/api/*",
      "https://tv.csapp.westport.k12.ct.us/api/*",
      "storage",
      "https://cs.westport.k12.ct.us/~js51683/push.json"
        ],
    "background": {
      "scripts": [
        "jsOAuth-1.3.7.js",
        "jquery-2.2.1.min.js",
        "semantic.js",
        "background.js",
        "date.js"
      ],
      "persistent": true
    },
    "web_accessible_resources": [
      "48.png"
    ]
  }
